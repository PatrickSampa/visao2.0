{
  "compilerOptions": {
    "target": "ES2017",                                  
     "lib": [
          "es5",
          "es6",
          "ES2021"
     ],                                       
    
    "module": "commonjs",                                
     "rootDir": "./src",                                 
    
                                
     "outDir": "./build",                                  
   
    
    "esModuleInterop": true,                          
   
    "forceConsistentCasingInFileNames": true,          

   
    "strict": true,                                     
    "skipLibCheck": true                                 
  }
}
